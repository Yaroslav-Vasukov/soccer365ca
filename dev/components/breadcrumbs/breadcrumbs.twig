{# File: dev/components/breadcrumbs/breadcrumbs.twig #}
{# 
  Standalone Breadcrumbs Component
  
  Props:
  - items: array (required) - Breadcrumb items
    - label: string - Display text
    - href: string (optional) - Link URL (if not provided, treated as current page)
    - home: boolean (optional) - Mark as home link (uses icon)
  - aria_label: string (optional) - ARIA label for navigation
#}

{% set items = items|default([]) %}
{% set aria_label = aria_label|default('Breadcrumb') %}

	{% if items|length > 0 %}
		<nav aria-label="{{ aria_label }}"> <ol class="breadcrumbs">
			{% for item in items %}
				<li class="breadcrumbs__item">
					{% if not loop.first %}
						<span class="breadcrumbs__separator material-symbols-outlined">
							arrow_right
						</span>
					{% endif %}

					{% if item.href %}
						<a href="{{ item.href }}" class="breadcrumbs__link{% if item.home %} breadcrumbs__home{% endif %}" {% if item.home %} aria-label="Home" {% endif %}>
							{% if item.home %}
														<span class="breadcrumbs__icon material-symbols-outlined">
							home
						</span>
							{% else %}
								{{ item.label }}
							{% endif %}
						</a>
					{% else %}
						<span class="breadcrumbs__current" aria-current="page">
							{{ item.label }}
						</span>
					{% endif %}
				</li>
			{% endfor %}
		</ol>
	</nav>
{% endif %}
