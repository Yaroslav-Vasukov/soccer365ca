{# components/hero/hero.twig #}
{#
  ВХОД:
  - bg: "/assets/images/bg/hero.webp"
  - title: "Main title"
  - subtitle: "Optional subtitle"
  - text: "Some description"
  - button: { href: "/join", label: "Join now" }
  - variant: "home"   # вариант для модификатора
#}

{% set _bg       = bg|default(null) %}
{% set _title    = title|default('Hero title') %}
{% set _subtitle = subtitle|default(null) %}
{% set _text     = text|default(null) %}
{% set _button   = button|default(null) %}
{% set _variant  = variant|default('default') %}

<section class="hero hero--{{ _variant }}">
  {% if _bg %}
    <img src="{{ _bg }}" alt="" class="hero__bg">
  {% endif %}
  <div class="container">
    <div class="hero__inner">
      <div class="hero__item">
        <h1 class="hero__title">{{ _title }}</h1>
        {% if _subtitle %}
          <p class="hero__subtitle">{{ _subtitle }}</p>
        {% endif %}
        {% if _text %}
          <p class="hero__text">{{ _text }}</p>
        {% endif %}
        {% if _button %}
          {% include "../button/button.twig" with _button %}
        {% endif %}
      </div>
    </div>
  </div>
</section>
